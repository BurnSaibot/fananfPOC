<!DOCTYPE hyml>
<html>
    <head>
        <meta charset="utf-8" />
        <title> fananf - read a subtitles file  </title>
        <link rel="stylesheet" href="/css/general.css">
        <link rel="stylesheet" href="/css/menu.css">
        <link rel="stylesheet" href="/css/video.css">	
    </head>
    <body>
        <script src="https://code.jquery.com/jquery.min.js"></script>
        <%- include('partials/headerConnected') %>
        <main>
            <div class="blockPres">
                <h1>Consultation d'un fichier de sous-titres : </h1>
                <button id="btnSave" onclick="exportFile()">Export</button>
            </div>
            <div class="videoContainer">
                <video controls="controls">
                        <source src="http://vmfananf:3000/video/<%=sub._id%>" type="video/mp4">
                    Vidéo à afficher pour la lecture de sous titres
                </video>
            </div>
            <% subtitles.forEach(function(sub,index){%>
                <div class="subtitle">
                    <p class="index"><%= sub.subIndex%></p> 
                    <p class="timecode"><%= sub.subTimeCode%></p> 
                    <p class="content1"><%= sub.sub1%></p>
                    <p class="content2"><%= sub.sub2%></p>
                </div> </br>
           <% }) %>
        </main>
        <script>
            function exportFile(){
                    var url = "http://vmfananf:3000/subtitle/export/" + document.location.href.substr(document.location.href.lastIndexOf('/') + 1);
                    window.open(url,'_blank');
                }
        </script>
    </body>
    <%- include('partials/footer') %>
</html>
