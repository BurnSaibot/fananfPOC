            </tr>
        </br>
            <% if (users.length>0) {
                users.forEach(function(user,index) { %>
                <tr>
                    <td>
                        <%= user.nom %>
                    </td>
                    <td>
                        <%= user.prenom %>
                    </td>
                </tr>
            </br>
            <% }); 
            } %>
