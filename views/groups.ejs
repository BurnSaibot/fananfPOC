                </td>
            </tr>
        </br>
            <% for(var i = 0;i<groups.length;i++) { %>
                <tr>
                        <td>
                            <%= groups[i].name %>
                        </td>
                        <td>
                            <a href="/group/<%= groups[i]._ids %>"> Plus d'informations ici </a>
                        </td>
                    </tr>
                    </br>
            <% } %>
                </br>
                <form method="POST" action="/createGroup">
                    <input type="submit" value="Ajouter un groupe"
                </form>
        </main>
