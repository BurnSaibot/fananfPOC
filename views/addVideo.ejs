<!DOCTYPE hyml>
<html>
    <head>
        <meta charset="utf-8" />
        <title> fananf - My groups  </title>
        <link rel="stylesheet" href="/style/general.css">
		<link rel="stylesheet" href="/style/menu.css">	
    </head>
    <body>
        <%- include('partials/headerConnected') %>
        <main>
            <form action="/transcription/videoupload" method="post" enctype="multipart/form-data" >
            <label for="format">
                Choisissez le groupe de travail pour lequel vous uploadez la video :
            </label> </br>
            
            <select name="group">
            <%
                groups.forEach(function(group,index) { %>
                    <option value=<%=group._id %>> <%=group.name%></option>

            <%}) %>
            </select> </br>
            <label for="format">
                Choisissez le format des sous titres voulu : 
            </label> </br>
            <select name="format">
                <option value="srt">Srt</option>
                <option value="vtt">webVtt</option>
                <option value="all">Tous</option>
            </select>
            </br>
            
                <input type="file" name="/videotoupload" accept="video/*" required></br>
                <input type="submit"> </br> 
            </form>
        </main>
        <%- include('partials/footer') %>
    </body>
</html>
